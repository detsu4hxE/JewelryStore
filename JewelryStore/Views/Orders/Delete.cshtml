@model JewelryStore.Models.Orders

@{
    ViewData["Title"] = "Удаление заказа";
}

<h1>Удалить заказ</h1>

<h3>Вы уверены, что хотите удалить этот заказ?</h3>
<div style="font-size: large">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Клиент
        </dt>
        <dd class = "col-sm-10">
            @Model.Users.login
        </dd>
        <dt class = "col-sm-2">
            Сумма заказа
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.total_price) руб.
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
