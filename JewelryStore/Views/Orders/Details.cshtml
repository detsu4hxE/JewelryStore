@model JewelryStore.Models.Orders

@{
    ViewData["Title"] = "Сведения о заказе";
}

<h1>Сведения о заказе</h1>

<div style="font-size: large">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Клиент
        </dt>
        <dd class = "col-sm-10">
            @Model.Users.login
        </dd>
        <dt class = "col-sm-2">
            Сумма заказа
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.total_price) руб.
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редактировать</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
