@model JewelryStore.Models.Orders

@{
    ViewData["Title"] = "Редактирование заказа";
}

<h1>Редактировать заказ</h1>
<hr />
<div class="row">
    <div class="col-md-4" style="font-size: large">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UsersID" class="control-label">Клиент</label>
                <select asp-for="UsersID" class="form-control" asp-items="ViewBag.UsersID"></select>
                <span asp-validation-for="UsersID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="total_price" class="control-label">Сумма заказа</label>
                <input asp-for="total_price" class="form-control" />
                <span asp-validation-for="total_price" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
            <p></p>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
