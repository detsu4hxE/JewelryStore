@model JewelryStore.Models.Product_types

@{
    ViewData["Title"] = "Удаление вида товара";
}

<h1>Удалить вид товара</h1>

<h3>Вы уверены, что хотите удалить этот вид товара?</h3>
<div style="font-size: large">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
