@model JewelryStore.Models.Products

@{
    ViewData["Title"] = "Удаление товара";
}

<h1>Удалить товар</h1>

<h3>Вы уверены, что хотите удалить этот товар?</h3>
<div style="font-size: large">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Изображение
        </dt>
        <dd class = "col-sm-10">
            @{
                //string path = @"C:\Users\USR\Documents\Education\УПМ23\JewelryStore\JewelryStore\wwwroot\Resources\" + Model.image;
                string path = @"S:\USERS\50-02\Рыбалко Михаил Алексеевич\УПМ23\JewelryStoreBackUp\JewelryStore\JewelryStore\wwwroot\Resources\" + Model.image;
                if (File.Exists(path))
                {
                    <img width="75px" src="~/Resources/@Model.image">
                }
                else
                {
                    <img width="75px" src="~/Resources/no_image1.png">
                }
            }
        </dd>
        <dt class = "col-sm-2">
            Название
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            Вид товара
        </dt>
        <dd class = "col-sm-10">
            @Model.Product_Types.name
        </dd>
        <dt class = "col-sm-2">
            Материал
        </dt>
        <dd class = "col-sm-10">
            @Model.Materials.name
        </dd>
        <dt class = "col-sm-2">
            Стоимость
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.price) руб.
        </dd>
        <dt class = "col-sm-2">
            Масса
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.weight) г.
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
